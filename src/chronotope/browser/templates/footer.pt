<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
           xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="chronotope"
           omit-tag="True">

  <footer class="navbar-default navbar-fixed-bottom">

    <div class="container">
      <a href="http://www.tu-dresden.de/"
         class="footer-tu-dresden pull-left">
        <img src="chronotope-static/images/tu_dresden.png">
      </a>

      <a href="http://www.dfg.de/"
         class="footer-dfg pull-left">
        <img src="chronotope-static/images/dfg.png">
      </a>

      <a href="${request.application_url}/about/terms_of_use"
         class="terms-of-use pull-left"
         ajax:bind="click"
         ajax:event="contextchanged:#layout"
         ajax:target="${request.application_url}/about/terms_of_use"
         i18n:translate="terms_of_use">
        Terms of use
      </a>

      <a href="http://www.aesthetische-eigenzeiten.de/"
         class="footer-ae pull-right"
         target="blank">
        <img src="chronotope-static/images/eigenzeiten.svg"
             width="140" height="19">
      </a>
    </div>

  </footer>

</tal:block>
