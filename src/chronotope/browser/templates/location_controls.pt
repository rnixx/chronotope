<tal:controls xmlns:tal="http://xml.zope.org/namespaces/tal"
              omit-tag="True">

  <div>

    <div class="dropdown">
      <button class="btn dropdown-toggle" 
              type="button" 
              id="location-controls-dropdown" 
              data-toggle="dropdown">
        <span class="glyphicon glyphicon-map-marker"></span>
      </button>

      <ul class="dropdown-menu">
        <li>
          <div class="form-group submitter_email">
            <label for="submitter_email">
                Submitter
            </label>
            <input type="email"
                   class="form-control"
                   id="submitter_email"
                   placeholder="Enter your email address" />
            <p class="help-block submitter-empty"
               style="display:none;">
              Needs to be filled in order to add contents.
            </p>
            <p class="help-block submitter-error"
               style="display:none;">
              Input is not a valid email address.
            </p>
            <p class="help-block submitter-success"
               style="display:none;">
              OK! You can create content.
            </p>
          </div>
        </li>

        <li class="divider"></li>

        <li class="disabled">
          <a href="#">Add new location</a>
        </li>
      </ul>
    </div>

  </div>

</tal:controls>
