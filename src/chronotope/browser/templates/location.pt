<tal:location xmlns:tal="http://xml.zope.org/namespaces/tal"
              xmlns:i18n="http://xml.zope.org/namespaces/i18n"
              xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
              i18n:domain="chronotope"
              omit-tag="True">

  <div class="location-tile">

    <table class="table">

      <tr tal:condition="context.is_backend">
        <td class="row-title">Coordinates</td>
        <td tal:define="coordinates context.coordinates">
          <div id="location-view-map-${model.name}"
               class="location-view-map"
               data-lat="${coordinates['lat']}"
               data-lon="${coordinates['lon']}"
               data-zoom="${coordinates['zoom']}"></div>
        </td>
      </tr>

      <tr>
        <td class="row-title">Street</td>
        <td tal:content="model.attrs['street']">Street</td>
      </tr>

      <tr>
        <td class="row-title">ZIP</td>
        <td tal:content="model.attrs['zip']">ZIP</td>
      </tr>

      <tr>
        <td class="row-title">City</td>
        <td tal:content="model.attrs['city']">City</td>
      </tr>

      <tr>
        <td class="row-title">Country</td>
        <td tal:content="model.attrs['country']">Country</td>
      </tr>

      <tr>
        <td class="row-title">Facilities</td>
        <td>
          <tal:related replace="structure tile('related_facilities')" />
        </td>
      </tr>

      <tr>
        <td class="row-title">Occasions</td>
        <td>
          <tal:related replace="structure tile('related_occasions')" />
        </td>
      </tr>

      <tr>
        <td class="row-title">Attachments</td>
        <td>
          <tal:related replace="structure tile('related_attachments')" />
        </td>
      </tr>

    </table>

  </div>

</tal:location>
