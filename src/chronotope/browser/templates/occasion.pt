<tal:occasion xmlns:tal="http://xml.zope.org/namespaces/tal"
              xmlns:i18n="http://xml.zope.org/namespaces/i18n"
              xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
              i18n:domain="chronotope"
              omit-tag="True">

  <div class="occasion-tile">

    <table class="table">

      <tr>
        <td class="row-title">Title</td>
        <td tal:content="model.attrs['title']">Title</td>
      </tr>

      <tr>
        <td class="row-title">Description</td>
        <td tal:content="structure model.attrs['description']">
          Description
        </td>
      </tr>

      <tr>
        <td class="row-title">Duration from</td>
        <td tal:content="context.duration_from">1.1.2014</td>
      </tr>

      <tr>
        <td class="row-title">Duration to</td>
        <td tal:content="context.duration_to">1.1.2014</td>
      </tr>

      <tr>
        <td class="row-title">Locations</td>
        <td>
          <tal:related replace="structure tile('related_locations')" />
        </td>
      </tr>

      <tr>
        <td class="row-title">Facilities</td>
        <td>
          <tal:related replace="structure tile('related_facilities')" />
        </td>
      </tr>

      <tr>
        <td class="row-title">Attachments</td>
        <td>
          <tal:related replace="structure tile('related_attachments')" />
        </td>
      </tr>

      <tr>
        <td class="row-title">Actions</td>
        <td>
          <tal:actions replace="structure tile('overlay_actions')" />
        </td>
      </tr>

    </table>

  </div>

</tal:occasion>
